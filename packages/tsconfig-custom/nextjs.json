{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "nextjs",
    "extends": "./base.json",

    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true
    }
}
